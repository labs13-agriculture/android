<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_transaction"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/colorPrimaryDark"
    card_view:cardUseCompatPadding="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/amount_tv"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:lines="2"
            android:paddingTop="20dp"
            android:textColor="@color/white"
            android:text="10.02" />

        <TextView
            android:id="@+id/mode_tv"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_toEndOf="@+id/amount_tv"
            android:lines="2"
            android:paddingTop="20dp"
            android:textColor="@color/white"
            android:text="CREDIT" />

        <TextView
            android:id="@+id/date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:lines="2"
            android:paddingTop="20dp"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_toEndOf="@+id/mode_tv"
            android:textColor="@color/white"
            android:text="2019-06-21" />

        <TextView
            android:id="@+id/officer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:lines="2"
            android:paddingTop="20dp"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_toEndOf="@+id/date_tv"
            android:textColor="@color/white"
            android:text="Joshua" />

    </RelativeLayout>

</android.support.v7.widget.CardView>